<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:minWidth="200dp" android:maxWidth="200dp" android:minHeight="240dp"
                                             android:maxHeight="240dp" android:visibility="visible"
                                             android:id="@+id/book_layout">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal" android:visibility="visible" android:id="@+id/linearLayout6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp" android:id="@+id/book_cover"
                android:contentDescription="@string/book_cover"
                android:layout_weight="1" android:visibility="visible" android:layout_marginTop="10dp"/>
        <TextView
                android:text="@string/textview2"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/textView2" android:layout_weight="1"
                android:contentDescription="@string/book_cover" android:visibility="visible"
                android:gravity="center_horizontal" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="14sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>